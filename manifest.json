{
  "manifest_version": 3,
  "name": "LinkedIn Job Analyzer",
  "version": "1.0.0",
  "description": "AI-powered job posting summarizer for LinkedIn",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://it.linkedin.com/*",
    "http://localhost/*"
  ],
  
  "background": {
    "service_worker": "src/background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/view/*",
        "https://it.linkedin.com/jobs/view/*",
        "https://www.linkedin.com/jobs/collections/*",
        "https://it.linkedin.com/jobs/collections/*"
      ],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Analyze LinkedIn Job"
  },
  
  "options_page": "src/options.html"
}